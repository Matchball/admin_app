<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#555555">

    <TextView
        android:id="@+id/matchdisplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="23sp"/>

    <EditText
        android:id="@+id/edittextpopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Match Score"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:background="#ffffff"/>

    <RadioGroup
        android:id="@+id/matchtyperadiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/fivematch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="five-match"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/threematch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="three-match"
            android:textColor="#000000"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/enterbutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enter" />

        <Button
            android:id="@+id/cancelbutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cancel" />
    </LinearLayout>
</LinearLayout>